#include "math.en.grammar"
#include "math.zh.grammar"

<F> = <number> {nf.I($1)}
    | <word>   {nf.id($1)}
    ;

<F> = "(" <E> ")" {nf.I($2)};

<T> = <T> "*" <F> {nf.math.mul($1,$3)}
    | <T> "/" <F> {nf.math.div($1,$3)}
    | <F> {nf.I($1)}
    ;

<E> = <E> "+" <T> {nf.math.sum($1,$3)}
    | <E> "-" <T> {nf.math.sub($1,$3)}
    | <T> {nf.I($1)}
    ;

